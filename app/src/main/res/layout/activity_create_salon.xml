<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Création du salon: 1/2"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/editTextSalonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nom du salon"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/editTextSalonAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Adresse du salon"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/editTextSalonPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Téléphone du salon"
        android:inputType="phone"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/editTextSalonEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email du salon"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUIVANT"
        android:layout_gravity="center"/>
</LinearLayout>
